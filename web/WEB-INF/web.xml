<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>FileFilter</filter-name>
        <filter-class>filter.FileFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AccountFilter</filter-name>
        <filter-class>filter.AccountFilter</filter-class>
    </filter>
    <filter>
        <filter-name>DashBoardFIlter</filter-name>
        <filter-class>filter.DashBoardFIlter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FileFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DashBoardFIlter</filter-name>
        <url-pattern>/AdminController/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AccountFilter</filter-name>
        <url-pattern>/account/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountController</servlet-name>
        <servlet-class>controller.AccountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PaymentController</servlet-name>
        <servlet-class>controller.PaymentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminControllerProduct</servlet-name>
        <servlet-class>controller.AdminControllerProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSupplierController</servlet-name>
        <servlet-class>controller.AdminSupplierController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminControllerAccount</servlet-name>
        <servlet-class>controller.AdminControllerAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminController</servlet-name>
        <servlet-class>controller.AdminController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminAddProduct</servlet-name>
        <servlet-class>controller.AdminAddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RequestPassword</servlet-name>
        <servlet-class>controller.RequestPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MonthlyRevenue</servlet-name>
        <servlet-class>controller.MonthlyRevenue</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPassword</servlet-name>
        <servlet-class>controller.ResetPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>controller.ProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetailController</servlet-name>
        <servlet-class>controller.ProductDetailController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountController</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>PaymentController</servlet-name>
        <url-pattern>/payment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminControllerProduct</servlet-name>
        <url-pattern>/AdminControllerProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSupplierController</servlet-name>
        <url-pattern>/AdminSupplierController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminControllerAccount</servlet-name>
        <url-pattern>/AdminControllerAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminController</servlet-name>
        <url-pattern>/AdminController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminAddProduct</servlet-name>
        <url-pattern>/adminAddProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequestPassword</servlet-name>
        <url-pattern>/RequestPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MonthlyRevenue</servlet-name>
        <url-pattern>/MonthlyRevenue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPassword</servlet-name>
        <url-pattern>/ResetPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetailController</servlet-name>
        <url-pattern>/productdetail</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>
</web-app>
